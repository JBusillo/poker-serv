	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch via npm",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run-script", "dev"],
			"port": 9229,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/debug/server.js"],
			"restart": true
		},
		{
			"type": "node",
			"request": "launch",
			"name": "build",
			"program": "${workspaceFolder}/node_modules/.bin/webpack-cli.ps1",
			"args": ["--config", "webpack.server.config.js"],
			"autoAttachChildProcesses": true,
			"stopOnEntry": true,
			"sourceMaps": true
		}
	]
}
