	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch via npm",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			// "runtimeExecutable": "npm",
			// "runtimeArgs": ["run-script", "dev"],
			"port": 9230,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/debug/server.js"],
			"restart": true,
			"preLaunchTask": "npm: debug"
		},
		{
			"name": "Launch Simple",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run-script", "dev"],
			"port": 9230,
			"sourceMaps": true,
			"outputCapture": "std",
			"restart": true,
			"outFiles": ["${workspaceRoot}/debug/server.js"]
			// "preLaunchTask": "npm: debug"
		}
	]
}
