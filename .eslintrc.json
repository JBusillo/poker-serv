{
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module",
		"impliedStrict": true
	},
	"env": {
		"node": true
	},
	"globals": {
		"td": true,
		"assert": true
	},
	"rules": {
		"comma-dangle": "off",
		"lines-around-comment": "off",
		"no-console": "off",
		"brace-style": "off",
		//		"no-unused-vars": "on",
		"new-cap": "off",
		"no-array-constructor": "off"
		// "template-curly-spacing": "off",
		// "indent": [
		// 	"error",
		// 	2,
		// 	{
		// 		"ignoredNodes": ["TemplateLiteral"]
		// 	}
		// ]
	},
	"extends": ["eslint:recommended", "eslint-config-synacor"]
}
